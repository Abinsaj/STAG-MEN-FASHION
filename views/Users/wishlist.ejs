    <script>
        function removeFromWishlist(productID){
            fetch('/removewishlist',{
                method:'PATCH',
                headers:{
                    'Content-Type':'application/json'
                },
                body:JSON.stringify({productID})
            })
            .then(response=>response.json())
            .then(data=>{
                if(data.success){
                    window.location.reload()
                }
            })
        }
    </script>
      
